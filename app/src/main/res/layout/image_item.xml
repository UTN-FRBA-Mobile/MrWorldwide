<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/image_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trip_photo_example"
                    android:id="@+id/image_item_photo"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/gradient" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <ImageButton
                        android:id="@+id/image_item_share"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/icon_share"
                        android:backgroundTint="@color/colorPrimary" />

                    <ImageButton
                        android:id="@+id/image_item_edit"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/icon_edit"
                        android:backgroundTint="@color/colorPrimary" />

                </LinearLayout>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_placeholder"
                android:textColor="@color/primaryTextLight"
                android:textSize="12sp"
                android:textStyle="italic"
                android:id="@+id/image_item_date"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/image_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_placeholder"
                android:layout_marginTop="7dp"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>